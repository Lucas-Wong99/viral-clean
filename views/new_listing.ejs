<!DOCTYPE html>
html lang="en">
  <head>
    <title>Home Page</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <%- include('partials/_header') %>
    <main>
      <h2>Create New Listing</h2>
      <form action="/items" method="POST" class="new-item-form">

        <div class="new-item-form__field-wrapper">
          <label for="new-item-form__name">Name of Item</label>
          <input type="text" name="name" placeholder="Name of item" id="new-item-form__name">
        </div>
        
        <div class="new-item-form__field-wrapper">
          <label for="new-item-form__description">Description</label>
          <textarea placeholder="Description" name="description" id="item__description" cols="30" rows="10"></textarea>
        </div>
  
        <div class="new-item-form__field-wrapper">
          <div class="image_and_city_input">
            <div>
              <label for="new-item-form__image">Image URL</label>
              <input placeholder="Image URL" type="text" name="image_photo_url" id="new-item-form__image">
            </div>
            <div>
              <label for="new-item-form__street">City</label>
              <input placeholder="City" type="text" name="city" id="new-item-form__city" />
            </div>
          </div>      
          <div class="item-price">
            <label for="new-item-form__cost">Price</label>
            <input placeholder="Price for item" type="number" name="price_for_item" id="new-item-form__cost">
          </div>
        </div>
        
        <div class="new-item-form__field-wrapper">
          <button>Create</button>
          <a id="item-form__cancel" href="#">Cancel</a>
        </div>
          
      </form>

    </main>
    
  </body>
</html>
